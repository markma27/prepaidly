{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x ../backend/gradlew && cd .. && ./backend/gradlew :cronjob:clean :cronjob:build -x test --no-daemon"
  },
  "deploy": {
    "startCommand": "cd cronjob && java -jar build/libs/prepaidly-cronjob-0.1.0.jar",
    "restartPolicyType": "never"
  }
}
